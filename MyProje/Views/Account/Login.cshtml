@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-4 offset-4">
        <div class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</div>
  </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
       <form method="post" >
           <div asp-validation-summary="ModelOnly" class="text-danger small"></div>  @*aşağıdaki hataların dışındaki hataları burada gösteriyoruz*@
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"> Username</label>
               <input asp-for="Username" class="form-control" placeholder="johndoe" />
            <span asp-validation-for="Username" class="text-danger small"></span>  @*hataları gösterecek*@
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"> Password</label>
                <input asp-for="Password"  type="password" class="form-control" placeholder="P@ssW0rd!" />
                <span asp-validation-for="Password" class="text-danger small"></span> @*hataları gösterecek*@
            </div>
             <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary w-100"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button>
            </div>
       </form>
    </div>
</div>